set title "Distribution of average membrane voltages"
set xlabel "Average membrane voltage [mV]"
set ylabel "Absolute frequency"
set key off

#number of bins
n = 30
min = -15
max = 15
bin_width = (max-min)/n;
box_width = bin_width * 0.9

set boxwidth box_width absolute
set style fill solid 1.0 border

set xrange [min:max]

bin(x)=bin_width*floor(x/bin_width)+bin_width/2.0

plot "results/avgvoltage" using (bin($1)):(1) smooth frequency with boxes linecolor rgb 'black'
pause mouse any "Press any key or button to continue...\n"
